/* pages/search/index.wxss */
page {
  background-color: #dedede;
  padding: 20rpx;
}
.search_row {
  height: 60rpx;
  display: flex;
}
.search_row input {
  background-color: #fff;
  flex: 1;
  height: 100%;
  padding-left: 30rpx;
}
.search_row button {
  width: 110rpx;
  height: 100%;
  padding: 0;
  margin: 0 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}
.search_content {
  margin-top: 30rpx;
  display: flex;
  flex-wrap: wrap;
  min-height: 100vh;
  overflow-y: scroll;
}
.search_content .search_item {
  margin: 20rpx;
  width: 320rpx;
  height: 200rpx;
  background-color: #fff;
  font-size: 26rpx;
  padding: 15rpx 10rpx;
  border-bottom: 1rpx solid #ccc;

  display: flex;
  flex-direction: column;
  align-items: center;
}
.search_content .search_item image {
  width: 80%;
  height: 80%;
}
.search_content .search_item text {
  width: 80%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
